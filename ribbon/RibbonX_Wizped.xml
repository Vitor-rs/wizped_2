<?xml version="1.0" encoding="UTF-8"?>
<!--
  RIBBON XML — Wizped Office v4
  
  CALLBACKS definidos em: VBA_03_RibbonCallbacks.bas (mod_RibbonCallbacks)
  
  COMO USAR:
  1. Feche o .xlsm no Excel
  2. Abra o Custom UI Editor (Office RibbonX Editor)
  3. Cole este XML (substitua o anterior)
  4. Salve e feche → reabra no Excel
-->
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab id="tabWizped" label="Wizped" insertAfterMso="TabHome">
        
        <!-- ═══════════════════════════════════ -->
        <!-- GRUPO 1: Cadastro                   -->
        <!-- ═══════════════════════════════════ -->
        <group id="grpCadastro" label="Cadastro">
          <button id="btnGerenciar"
                  label="Gerenciar Alunos"
                  size="large"
                  imageMso="ContactsModule"
                  onAction="OnGerenciarAlunos"
                  screentip="Abrir formulário de alunos"
                  supertip="Abre o formulário completo para buscar, cadastrar, editar e excluir alunos."/>
          <separator id="sepCadastro1"/>
          <button id="btnNovo"
                  label="Novo Aluno"
                  size="normal"
                  imageMso="GroupContactNew"
                  onAction="OnNovoAluno"
                  screentip="Criar novo aluno"
                  supertip="Abre o formulário já em modo de criação de novo aluno."/>
          <button id="btnImportar"
                  label="Importar Cadastro"
                  size="normal"
                  imageMso="ImportTextFile"
                  onAction="OnImportarCadastro"
                  screentip="Importar alunos do Sponte"
                  supertip="Importa dados de alunos a partir de relatório CSV exportado do SponteWeb."/>
        </group>
        
        <!-- ═══════════════════════════════════ -->
        <!-- GRUPO 2: Relatórios                 -->
        <!-- ═══════════════════════════════════ -->
        <group id="grpRelatorios" label="Relatórios">
          <button id="btnFichas"
                  label="Fichas de Frequência"
                  size="large"
                  imageMso="CreateReportFromWizard"
                  onAction="OnGerarFichas"
                  screentip="Gerar fichas de frequência"
                  supertip="Gera fichas mensais de frequência para os alunos ativos."/>
          <separator id="sepRelatorios1"/>
          <button id="btnDashboard"
                  label="Dashboard"
                  size="normal"
                  imageMso="ChartTypeAllChartTypes"
                  onAction="OnDashboard"
                  screentip="Painel de indicadores"
                  supertip="Abre o painel com métricas e gráficos dos alunos. (Em desenvolvimento)"/>
        </group>
        
        <!-- ═══════════════════════════════════ -->
        <!-- GRUPO 3: Ferramentas                -->
        <!-- ═══════════════════════════════════ -->
        <group id="grpFerramentas" label="Ferramentas">
          <button id="btnMostrar"
                  label="Mostrar BD"
                  size="normal"
                  imageMso="GroupViewShowHide"
                  onAction="OnMostrarPlanilhas"
                  screentip="Mostrar planilhas de dados"
                  supertip="Torna visíveis todas as planilhas BD_* (tabelas de domínio)."/>
          <button id="btnEsconder"
                  label="Ocultar BD"
                  size="normal"
                  imageMso="SheetProtect"
                  onAction="OnEsconderPlanilhas"
                  screentip="Ocultar planilhas de dados"
                  supertip="Oculta todas as planilhas BD_* para evitar edição acidental."/>
          <separator id="sepFerr1"/>
          <button id="btnRecriar"
                  label="Recriar Formulário"
                  size="normal"
                  imageMso="FormDesignMode"
                  onAction="OnRecriarFormulario"
                  screentip="Recriar o formulário de alunos"
                  supertip="Deleta e recria o frmAlunos do zero. Útil após atualizar o VBA_01_CriarFormulario."/>
          <button id="btnSobre"
                  label="Sobre"
                  size="normal"
                  imageMso="Info"
                  onAction="OnSobre"
                  screentip="Informações do sistema"
                  supertip="Exibe a versão e detalhes do Wizped Office."/>
        </group>
        
      </tab>
    </tabs>
  </ribbon>
</customUI>
