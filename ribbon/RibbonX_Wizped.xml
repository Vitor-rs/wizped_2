<?xml version="1.0" encoding="UTF-8"?>
<!--
  RIBBON XML — Wizped Office v3
  
  CALLBACKS definidos em: VBA_03_RibbonCallbacks.bas (mod_RibbonCallbacks)
  
  COMO USAR:
  1. Feche o .xlsm no Excel
  2. Abra o Custom UI Editor (Office RibbonX Editor)
  3. Cole este XML (substitua o anterior)
  4. Salve e feche → reabra no Excel
-->
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab id="tabWizped" label="Wizped" insertAfterMso="TabHome">
        
        <group id="grpAlunos" label="Alunos">
          <button id="btnGerenciar"
                  label="Gerenciar Alunos"
                  size="large"
                  imageMso="ContactAddressBookDialog"
                  onAction="OnGerenciarAlunos"
                  screentip="Abrir formulario de alunos"
                  supertip="Abre o formulario completo para buscar, cadastrar, editar e excluir alunos."/>
          <button id="btnNovo"
                  label="Novo Aluno"
                  size="normal"
                  imageMso="AddContact"
                  onAction="OnNovoAluno"
                  screentip="Criar novo aluno"
                  supertip="Abre o formulario ja em modo de criacao."/>
          <button id="btnImportar"
                  label="Importar Cadastro"
                  size="normal"
                  imageMso="ImportSavedImports"
                  onAction="OnImportarCadastro"
                  screentip="Importar alunos do Sponte"
                  supertip="Importa dados de alunos a partir de relatorio PDF do SponteWeb."/>
        </group>
        
        <group id="grpFichas" label="Fichas">
          <button id="btnFichas"
                  label="Gerar Fichas"
                  size="large"
                  imageMso="CreateReport"
                  onAction="OnGerarFichas"
                  screentip="Gerar fichas de frequencia"
                  supertip="Gera fichas mensais de frequencia para os alunos ativos."/>
        </group>
        
        <group id="grpPlanilhas" label="Planilhas">
          <button id="btnMostrar"
                  label="Mostrar Dados"
                  size="normal"
                  imageMso="TableShowHide"
                  onAction="OnMostrarPlanilhas"
                  screentip="Mostrar planilhas de dados"
                  supertip="Torna visiveis todas as planilhas BD_* (tabelas de dominio)."/>
          <button id="btnEsconder"
                  label="Esconder Dados"
                  size="normal"
                  imageMso="TableHideColumns"
                  onAction="OnEsconderPlanilhas"
                  screentip="Esconder planilhas de dados"
                  supertip="Oculta todas as planilhas BD_* para evitar edicao acidental."/>
        </group>
        
      </tab>
    </tabs>
  </ribbon>
</customUI>
